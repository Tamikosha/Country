<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Country</display-name>
    <welcome-file-list>
        <welcome-file>CountryServlet</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>CountryServlet</servlet-name>
        <servlet-class>CountryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CountryServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FlagServlet</servlet-name>
        <servlet-class>FlagServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FlagServlet</servlet-name>
        <url-pattern>/flag</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InformationServlet</servlet-name>
        <servlet-class>InformationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InformationServlet</servlet-name>
        <url-pattern>/information</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LanguagesServlet</servlet-name>
        <servlet-class>LanguagesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LanguagesServlet</servlet-name>
        <url-pattern>/languages</url-pattern>
    </servlet-mapping>

</web-app>